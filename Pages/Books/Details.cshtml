@model BookStore.Pages.Books.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Book Details</h4>
    <hr />
<br />
<div>
    <img src="../images/@(Model.Book?.bookName).jpg" alt="Book Image" style="max-width: 250px;" />
</div>
<br />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.bookName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.bookName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.bookType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.bookType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.publishDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.publishDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Publisher)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Publisher)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Language)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Language)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Paperback)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Paperback)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.ISBN_10)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.ISBN_10)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.ISBN_13)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.ISBN_13)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Item_Weight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Item_Weight)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Dimensions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Dimensions)
        </dd>
