@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ProductDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductDetail.ID" />
            <div class="form-group">
                <label asp-for="ProductDetail.bookID" class="control-label"></label>
                <select asp-for="ProductDetail.bookID" class="form-control" asp-items="ViewBag.bookID"></select>
                <span asp-validation-for="ProductDetail.bookID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDetail.bookName" class="control-label"></label>
                <input asp-for="ProductDetail.bookName" class="form-control" />
                <span asp-validation-for="ProductDetail.bookName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDetail.authorName" class="control-label"></label>
                <input asp-for="ProductDetail.authorName" class="form-control" />
                <span asp-validation-for="ProductDetail.authorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDetail.authorID" class="control-label"></label>
                <select asp-for="ProductDetail.authorID" class="form-control" asp-items="ViewBag.authorID"></select>
                <span asp-validation-for="ProductDetail.authorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

